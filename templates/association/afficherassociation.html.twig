{% extends 'base-back.html.twig' %}
{% block body %}
<style>
  .table {
    border-width: 1px;
    font-size: 8px;
    margin-bottom: 20px;
  }
  .table td, .table th {
    padding: 8px;
  }
  .table-striped tbody tr:nth-child(odd) {
    background-color: #f9f9f9;
  }
  .table-striped tbody tr:hover {
    background-color: #ddd;
  }
  .table-responsive {
    display: table;
  }
  .table-responsive > .table-bordered {
    border: none;
  }
  .table-responsive > .table-bordered > thead,
  .table-responsive > .table-bordered > tbody,
  .table-responsive > .table-bordered > tfoot {
    border-top: 1px solid #ddd;
  }
  .text-center {
    vertical-align: middle;
  }
  .btn-primary-custom {
    background-color: #007bff;
    border-color: #007bff;
    font-size: 12px;
    padding: 6px 10px;
  }
  .btn-danger-custom {
    background-color: #dc3545;
    border-color: #dc3545;
    font-size: 12px;
    padding: 6px 10px;
  }
  .btn-success-custom {
    background-color: #28a745;
    border-color: #28a745;
    font-size: 12px;
    padding: 6px 10px;
  }
  .btn-info-custom {
    background-color: #17a2b8;
    border-color: #17a2b8;
    font-size: 12px;
    padding: 6px 10px;
  }
</style>

<h1 class="text-center my-5">Liste des Associations</h1>
<div class="container-fluid">
  <table class="table table-striped table-bordered table-responsive-sm w-50 mx-auto">
    <thead>
      <tr>
        <th scope="col">Id Association</th>
        <th scope="col">Nom</th>
        <th scope="col">Telephone</th>
        <th scope="col">Email</th>
        <th scope="col">Lieu</th>
        <th scope="col">CodePostal</th>
        <th scope="col">Description</th>
        <th class="text-center" colspan="4">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for a in association %}
      <tr>
        <td>{{ a.id }}</td>
        <td>{{ a.nom }}</td>
        <td>{{ a.Telephone }}</td>
        <td>{{ a.Email }}</td>
        <td>{{ a.Lieu }}</td>
        <td>{{ a.CodePostal }}</td>
        <td>{{ a.Description }}</td>
        <td class="text-center">
          <a href="{{ path('app_ajouterassociation') }}" class="btn btn-primary-custom btn-sm">Ajouter</a>
        </td>
        <td class="text-center">
          <a href="{{ path('app_modifierassociation', {'id': a.id}) }}" class="btn btn-success-custom btn-sm">Modifier</a>
        </td>
        <td class="text-center">
          <a href="{{ path('app_afficherByidassociation', {'id': a.id}) }}" class="btn btn-info-custom btn-sm">Afficher</a>
        </td>
        <td class="text-center">
          <a href="{{ path('app_supprimerassociation', {'id': a.id}) }}" class="btn btn-danger-custom btn-sm">Supprimer</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
