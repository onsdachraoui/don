{% extends 'base-back.html.twig' %}

{% block body %}
<style>
    
    /* Styling pour la carte */
    .card {
        border: none; /* Retirer la bordure par défaut */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Ajouter une ombre douce */
        border-radius: 10px; /* Coins arrondis */
    }

    .card-body {
        padding: 30px; /* Espacement intérieur */
    }

    /* Style pour le titre de la carte */
    .card-title {
        color: #333; /* Couleur du texte */
        font-size: 24px; /* Taille de police */
    }

    /* Style pour l'espacement entre la carte et le bouton Retourner */
    .spacer {
        margin-bottom: 20px;
    }

</style>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-lg">
                <div class="card-body">
                    {{ form_start(f, {'attr': {'novalidate': 'novalidate'}}) }}

                    <h1 class="card-title text-center mb-4">Ajouter une association</h1>

                    <div class="mb-3">
                        {{ form_widget(f.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'association'}}) }}
                        {{ form_errors(f.nom) }}
                    </div>
                    <div class="mb-3">
                        {{ form_widget(f.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
                        {{ form_errors(f.telephone) }}
                    </div>
                    <div class="mb-3">
                        {{ form_widget(f.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                        {{ form_errors(f.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_widget(f.lieu, {'attr': {'class': 'form-control', 'placeholder': 'Lieu'}}) }}
                        {{ form_errors(f.lieu) }}
                    </div>
                    <div class="mb-3">
                        {{ form_widget(f.codePostal, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal'}}) }}
                        {{ form_errors(f.codePostal) }}
                    </div>
                    <div class="mb-3">
                        {{ form_widget(f.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                        {{ form_errors(f.description) }}
                    </div>
                    <div class="mb-3 d-grid">
                        {{ form_widget(f.Valider, {'attr': {'class': 'btn btn-primary', 'title': 'Valider'}}) }}
                    </div>

                    {{ form_end(f) }}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bouton Retourner -->
<div class="container">
    <div class="row justify-content-start">
        <div class="col-md-6">
            <td>
                <a href="{{ path('app_afficherassociation') }}">
                    <button type="button" class="btn btn-primary">
                        Retourner
                    </button>
                </a>
            </td>
        </div>
    </div>
</div>

{% endblock %}
