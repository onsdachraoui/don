{% extends 'base-back.html.twig' %}
{% block body %}
<style>
  .table {
    border-width: 1px;
    font-size: 12px;
    margin-bottom: 20px;
  }
  .table td, .table th {
    padding: 8px;
    vertical-align: middle; /* Alignement vertical */
  }
  .table-striped tbody tr:nth-child(odd) {
    background-color: #f9f9f9;
  }
  .table-striped tbody tr:hover {
    background-color: #ddd;
  }
  .table-responsive {
    display: table;
  }
  .table-responsive > .table-bordered {
    border: none;
  }
  /* Correction de la classe CSS */
  .table-responsive > .table-bordered > thead,
  .table-responsive > .table-bordered > tbody,
  .table-responsive > .table-bordered > tfoot {
    border-top: 1px solid #ddd;
  }
  .text-center {
    vertical-align: middle;
  }
  .btn-primary, .btn-danger {
    font-size: 12px;
    padding: 6px 10px;
  }
</style>

<h1 class="text-center my-5">Liste des dons</h1>
<div class="container-fluid">
  <table class="table table-striped table-bordered table-responsive w-75 mx-auto">
    <thead>
      <tr>
        <th scope="col">Id Don</th>
        <th scope="col">Nom</th>
        <th scope="col">Pr√©nom</th>
        <th scope="col">Email</th>
        <th scope="col">Id Utilisateur</th>
        <th scope="col">Date</th>
        
        <th scope="col">Id Association</th>
        <th scope="col">Type</th>
        <th class="text-center" colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for d in don %}
        <tr>
          <td>{{ d.id }}</td>
          <td>{{ d.Nom }}</td>
          <td>{{ d.Prenom }}</td>
          <td>{{ d.Email }}</td>
          <td>{{ d.IdUtilisateur }}</td>
          <td>{{ d.Date|date('d/m/Y') }}</td>
          <td>{{ d.IdAssociation }}</td>
          <td>{{ d.Type }}</td>
          <td class="text-center">
            <a href="{{ path('app_afficherByiddon', {'id': d.id}) }}" class="btn btn-primary btn-sm">Voir</a>
          </td>
          <td class="text-center">
            <a href="{{ path('app_supprimerdon', {'id': d.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
